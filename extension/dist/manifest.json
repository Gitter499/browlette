{
  "manifest_version": 3,
  "name": "Browlette",
  "version": "0.1.0",
  "description": "A search history roulette game.",
  "permissions": ["history"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
